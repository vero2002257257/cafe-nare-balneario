# ☕ Café Nare Balneario - Configuración de Entorno

# Puerto del servidor (por defecto: 3000)
PORT=3000

# ======================
# CONFIGURACIÓN DE BASE DE DATOS
# ======================

# Usar Google Sheets como base de datos (true/false)
# Si es false, usará Excel local
USE_GOOGLE_SHEETS=false

# ID del Google Spreadsheet (solo si USE_GOOGLE_SHEETS=true)
# Obtener del URL: https://docs.google.com/spreadsheets/d/ID_AQUI/edit
GOOGLE_SPREADSHEET_ID=

# Ruta del archivo Excel (solo si USE_GOOGLE_SHEETS=false)
EXCEL_FILE_PATH=./data/cafe_data.xlsx

# ======================
# CONFIGURACIÓN DE UPLOADS
# ======================

# Tamaño máximo de archivo en bytes (5MB por defecto)
MAX_FILE_SIZE=5242880

# Directorio para uploads de imágenes
UPLOAD_DIR=./uploads

# ======================
# CONFIGURACIÓN DE SEGURIDAD
# ======================

# Clave secreta para sesiones (generar una aleatoria en producción)
SESSION_SECRET=cafe_nare_secret_key_2024

# Dominio permitido para CORS (en producción cambiar por tu dominio)
CORS_ORIGIN=http://localhost:3000

# ======================
# CONFIGURACIÓN DE BACKUP
# ======================

# Mantener backups automáticos (true/false)
AUTO_BACKUP=true

# Intervalo de backup automático en horas
BACKUP_INTERVAL_HOURS=24

# Número máximo de backups a mantener
MAX_BACKUPS=10

# ======================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ======================

# Para notificaciones de stock bajo, ventas, etc.
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=

# ======================
# CONFIGURACIÓN DE DESARROLLO
# ======================

# Nivel de log (error, warn, info, debug)
LOG_LEVEL=info

# Mostrar logs de SQL/queries
DEBUG_QUERIES=false

# Habilitar modo desarrollo
NODE_ENV=development

# ======================
# CONFIGURACIÓN DE PRODUCCIÓN
# ======================

# Habilitar HTTPS
ENABLE_HTTPS=false

# Puerto HTTPS
HTTPS_PORT=443

# Rutas de certificados SSL
SSL_CERT_PATH=
SSL_KEY_PATH=

# ======================
# INFORMACIÓN DEL NEGOCIO
# ======================

# Nombre del negocio
BUSINESS_NAME=Café Nare Balneario

# Dirección del negocio
BUSINESS_ADDRESS=

# Teléfono del negocio
BUSINESS_PHONE=

# Email del negocio
BUSINESS_EMAIL=

# ======================
# CONFIGURACIÓN REGIONAL
# ======================

# Zona horaria
TIMEZONE=America/Bogota

# Moneda
CURRENCY=COP

# Idioma
LANGUAGE=es

# Formato de fecha (DD/MM/YYYY o MM/DD/YYYY)
DATE_FORMAT=DD/MM/YYYY
